<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.dieuhanhxebus.Vietthongbao">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:text="Thông báo số:"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/idthongbao"
                android:hint="5"
                android:paddingLeft="20dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <EditText
            android:id="@+id/edtnhap"
            android:gravity="top"
            android:hint="Nhập thông báo ở đây ....."
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:text="Ngày:"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/edtngay"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/btncalendar"
                android:layout_marginRight="10dp"
                android:background="@drawable/calendaricon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btnDangthongbao"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="#363636"
            android:text="đăng thông báo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnHuy"
            android:layout_marginTop="1dp"
            android:textColor="@android:color/white"
            android:background="#363636"
            android:text="Hủy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
